          "required": true,
          "options": [
            { "value": "scolaire", "label": "En scolarité" },
            { "value": "recherche_emploi", "label": "En recherche d'emploi" },
            { "value": "salarie", "label": "Salarié" },
            { "value": "autre", "label": "Autre" }
