        {
          "name": "employeur_siret",
          "label": "Numéro SIRET (14 chiffres)",
          "type": "text",
          "required": true,
          "placeholder": "12345678901234",
          "pattern": "\\d{14}"
        },
        {
          "name": "employeur_adresse",
          "label": "Adresse complète",
          "type": "text",
          "required": true,
          "placeholder": "12 rue de la Paix"
