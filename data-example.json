        {
          "name": "representant_telephone",
          "label": "Représentant légal - Téléphone",
          "type": "tel",
          "required": false,
          "placeholder": "06 12 34 56 78",
          "showIf": {
            "field": "apprenti_mineur",
            "value": "oui"
          }
        }
