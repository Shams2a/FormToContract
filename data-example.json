        {
          "name": "employeur_convention_collective",
          "label": "Intitulé de la convention collective",
          "type": "text",
          "required": true,
          "placeholder": "Ex: Convention collective nationale du commerce de détail"
        },
        {
          "name": "employeur_idcc",
          "label": "Code IDCC (4 chiffres)",
          "type": "text",
          "required": true,
          "placeholder": "1234",
          "pattern": "\\d{4}"
