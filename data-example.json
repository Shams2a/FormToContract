        {
          "name": "employeur_code_postal",
          "label": "Code postal",
          "type": "text",
          "required": true,
          "placeholder": "75000"
        },
        {
          "name": "employeur_ville",
          "label": "Ville",
          "type": "text",
          "required": true,
          "placeholder": "Paris"
        },
        {
          "name": "employeur_effectif",
          "label": "Effectif total de l'entreprise",
          "type": "number",
          "required": true,
          "min": 1,
          "placeholder": "10"
